@model IEnumerable<Site_Lab12.Models.UserMessage>
@using Microsoft.AspNet.Identity



@{
    ViewBag.Title = "Dialog";
}
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>

</head>
<body>
    
    <div class="container body-content">

        <h2>Dialog with </h2>



        <div id="chatBody">
            <div>
                <ul id="chatroom">
                    @foreach (var i in Model)
                    {
                    <li class="userMessage">
                        @if (i.UserSenderId == ViewData["senderId"].ToString())
                        {
                        <p> <b class="SenderName1">@i.senderUserName: </b> &nbsp; @i.MessageText <span id="senderDate">@i.Date</span></p>
                        }
                        else
                        {
                    <p><b class="RecipientName">@i.senderUserName: </b>  &nbsp; @i.MessageText <span id="recipientDate">@i.Date</span> </p>

                        }
                    </li>
                    }
                </ul>
            </div>
            <div id="chatroom1"></div>

            <div id="header"></div>
            <div id="inputForm">
                <textarea type="text" id="message" class="sendMes"> </textarea> <br />
                <input type="button" id="sendmessage" value="Отправить" class="sendMesBut" />
            </div>

            <input id="senderId" type="hidden" value="@ViewData["senderId"]" />
            <input id="recipientId" type="hidden" value="@ViewData["recipientId"]" />

            <input id="username" type="hidden" value="@User.Identity.Name" />
        </div>
    </div>

    <footer>
        <p>&copy; @DateTime.Now.Year - мое приложение ASP.NET</p>
    </footer>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <!--Ссылка на библиотеку SignalR -->
    <script src="~/Scripts/jquery.signalR-2.2.2.min.js"></script>
    <!--Ссылка на автоматически сгенерированный скрипт хаба SignalR -->
    <script src="~/signalr/hubs"></script>
    <script src="~/Scripts/DialogScripts.js"></script>
    @Scripts.Render("~/bundles/bootstrap")

</body>

