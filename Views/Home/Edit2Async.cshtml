@model Site_Lab12.Models.ApplicationUser

@{
    ViewBag.Title = "Edit";
}

<h2>Редагування</h2>

    @using (Html.BeginForm("Edit2Async","Home",FormMethod.Post,new { @class="forms" }))
    {
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <fieldset>
                <ol>
                    <li class="form-row text-input-row">
                        <label>UserName</label>
                        <input type="text" name="UserName" value="@Model.UserName" class="text-input required" title="" />
                        @*@Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })*@

                    </li>
                    <li class="form-row text-input-row">
                        <label>Email</label>
                        <input type="text" name="email" value="@Model.Email" class="text-input required email" title="" />
                        @*@Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })*@

                    </li>
                    <li class="form-row text-area-row">
                        <label>Phone number</label>
                        <input type="text" name="PhoneNumber" id="PhoneNumber" value="@Model.PhoneNumber" class="text-input required" title="" />

                    </li>
                    <li class="form-row hidden-row">
                        <input type="hidden" name="hidden" value="" />
                    </li>
                    <li class="button-row">
                        <input type="submit" value="Submit" name="submit" class="btn-submit" />
                    </li>
                </ol>
                <input type="hidden" name="v_email" id="v-email" value="Enter a valid email" />
            </fieldset>
    }
